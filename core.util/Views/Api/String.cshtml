@{
    ViewData["Title"] = "Util.Core.Helpers.String";
}
<h2>@ViewData["Title"]</h2>

<link href="~/css/site.css" rel="stylesheet" />
<div class="row" style="">
    <div class="col-md-12">
        <dl id="TGetType">
            <dt>
                <a name='PinYin' class="mao"></a>
                PinYin(string chineseText)
            </dt>
            <dd><span class="label">dec</span>: 获取汉字的拼音简码，即首字母缩写,范例：中国,返回zg</dd>
            <dd>
                <span class="label">para</span>: string chineseText
            </dd>
            <dd>
                <span class="label">return</span>: string
            </dd>
            <dd>
                <span class="label">eg</span>: Util.Core.Helpers.String.PinYin("中国") = > "zg"
            </dd>
        </dl>
        <dl>
            <dt>
                <a name='Join' class="mao"></a>
                Join< string >(IEnumerable<T> list, string quotes = "", string separator = "," )
            </dt>
            <dd><span class="label">dec</span>: 将集合连接为带分隔符的字符串</dd>
            <dd>
                <span class="label">para</span>: IEnumerable<T> list, string quotes = "", string separator = ","
            </dd>
            <dd>
                <span class="label">return</span>: string
            </dd>
            <dd>
                <span class="label">eg</span>: Util.Core.Helpers.Common.Join< string >([a,b,c,d, "'",","])  == > "'a','b','c'"
            </dd>
        </dl>
        <dl>
            <dt>
                <a name='FirstLowerCase' class="mao"></a>
                FirstLowerCase(string value)
            </dt>
            <dd><span class="label">dec</span>: 首字母小写</dd>
            <dd>
                <span class="label">para</span>: string value
            </dd>
            <dd>
                <span class="label">return</span>: string
            </dd>
            <dd>
                <span class="label">eg</span>: Util.Core.Helpers.Common.FirstLowerCase("TEST")  == > "tEST"
            </dd>
        </dl>
    </div>

</div>